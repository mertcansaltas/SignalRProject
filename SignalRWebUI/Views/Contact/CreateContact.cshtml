@model CreateContactDto
@{
    ViewData["Title"] = "CreateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Anasayfa İletişim Bilgi İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni İletişim Yazı Girişi</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="categoryname">Başlığı Giriniz</label>
								<input type="Location" class="form-control" asp-for="Location" id="Location">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="categoryname">Telefonu Giriniz</label>
								<input type="Phone" class="form-control" asp-for="Phone" id="Phone">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Mail">Maili Giriniz</label>
								<input type="email" class="form-control" asp-for="Mail" id="Mail">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="FooterDescription">Açıklamayı Giriniz</label>
								<textarea rows="5" class="form-control" asp-for="FooterDescription" id="FooterDescription"></textarea>
							</div>
						</div>

						<div class="card-body">
							<div class="form-group">
								<label for="FooterTitle">Alt Başlık Giriniz</label>
								<textarea rows="5" class="form-control" asp-for="FooterTitle" id="FooterTitle"></textarea>
							</div>
						</div>

						<div class="card-body">
							<div class="form-group">
								<label for="OpenDays">Açık Günleri Giriniz</label>
								<textarea rows="5" class="form-control" asp-for="OpenDays" id="OpenDays"></textarea>
							</div>
						</div>

						<div class="card-body">
							<div class="form-group">
								<label for="OpenDaysDescription">Açık Günlerin Açıklamasını Giriniz</label>
								<textarea rows="5" class="form-control" asp-for="OpenDaysDescription" id="OpenDaysDescription"></textarea>
							</div>
						</div>

						<div class="card-body">
							<div class="form-group">
								<label for="OpenHourses">Açık Saatleri Giriniz</label>
								<textarea rows="5" class="form-control" asp-for="OpenHourses" id="OpenHourses"></textarea>
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">İletişim Yazısını Ekle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
