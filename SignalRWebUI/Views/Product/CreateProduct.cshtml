@model CreateProductDto
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ürün İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Ürün Girişi</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="ProductName">Ürün Adını Giriniz</label>
								<input type="text" class="form-control" asp-for="ProductName" id="ProductName">
							</div>
						</div>

						<div class="card-body">
							<div class="form-group">
								<label for="Price">Ürünün Fiyatını Giriniz</label>
								<input type="text" class="form-control" asp-for="Price" id="Price">
							</div>
						</div>

						<div class="card-body">
							<div class="form-group">
								<label for="description">Ürünün Açıklamasını Giriniz</label>
								<input type="text" class="form-control" asp-for="Description" id="Description">
							</div>
						</div>

						<div class="card-body">
							<div class="form-group">
								<label for="imageURL">Ürünün Görselini Giriniz</label>
								<input type="text" class="form-control" asp-for="ImageURL" id="ImageURL">
							</div>
						</div>

						<div class="card-body">
							<div class="form-group">
								<label for="categoryname">Ürünün Kategorisini Seçiniz</label>
								@Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.v, new
									{ @class = "form-control" })
							</div>
						</div>

						<div class="card-action">
							<button class="btn btn-primary">Ürün Ekle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

